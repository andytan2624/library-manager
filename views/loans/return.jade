extend ../layout

block content
    h1= title

    include ../misc/errors

    form(action="/loans/return/" + loan.id ,method="post")
        p
            strong Book Title:
            |  #{book.title}
        p
            strong Loaned By:
            |  #{patron.first_name + ' ' + patron.last_name}
        p
            strong Loaned On:
            |  #{loan.loaned_on}
        p
            strong Return By:
            |  #{loan.return_by}
        p
            label(for="returned_on") Returned On
            input(id="returned_on", name="returned_on", type="text", value=loan.returned_on)
        p
            input(type="submit",value="Return Book")

