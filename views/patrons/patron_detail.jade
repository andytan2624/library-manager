extend ../layout

block content
    h1= title

    include ../misc/errors

    form(action="/patrons/" + patron.id + "?_method=PUT",method="post")
        include form
        p
            input(type="submit",value="Update")

    h2= 'Loan History'
    table
        thead
            tr
                th Book
                th Patron
                th Loaned on
                th Return by
                th Returned on
                th Action
        tbody
            each loan in loans
                tr
                    td
                        a(href='' + loan.book_id)= loan.Book.title
                    td
                        a(href='/patrons/' + loan.patron_id)= patron.first_name + ' ' + patron.last_name
                    td= loan.loaned_on
                    td= loan.return_by
                    td= loan.returned_on
                    td
                        if(loan.returned_on == null)
                            a(href='/loans/return/' + loan.id)= 'Return Book'

